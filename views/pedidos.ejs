<%- include ("./partials/cabecera") %> 
<%- rolAdmin!=false?include("./partials/navbar"):include("./partials/navbarUser")%> 

<h1 class="text-info text-center mb-5"><b>Mis pedidos</b></h1>



<div class=" text-center mt-5 mb-5">
    <br>

</div>

<div class=" w-75 container text-center">
    <div class="row row-cols-auto">
        
        <div class="row m-auto text-black">

            <% for(i=0;i<pedidos.length;i++){ %> 

                <div class="col-sm-6 mb-3 p-2">
                    <div class="card bg-primary">
                      <div class="card-body">
                        <h5 class="card-title"><b>Orden</b></h5>
                        <p class="card-text text-white"><b>Id: <%= pedidos[i].id %></b></p>
                        <p class="card-text text-white"><b>Servicio: <%= pedidos[i].idservicio %></b></p>

                        <p class="card-text text-white"><b>Cantidad: <%= pedidos[i].cantidad %></b></p>
                        <p class="card-text text-white"><b>Precio: <%= pedidos[i].precio %></b></p>
                        <p class="card-text text-warning"><b>Estado: <%= pedidos[i].estado %></b></p>
                      </div>
                    </div>
                  </div>

              <% } %> 
          
          <p class="text-white"><%= pedidos==false?'No tienes ordenes':'' %></p>
           
          </div>

    </div>
</div>


